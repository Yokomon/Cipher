                    <article>
                        <form action="/decrypt" method="post">
                            <textarea name="string" id="" cols="40" rows="15"
                                placeholder="Decrypt your text here"></textarea>
                            <button type="submit"
                                style="background-color: #00ad45; color:#fff; padding:4px; text-decoration:none; border-radius:2px;">Decrypt</button>
